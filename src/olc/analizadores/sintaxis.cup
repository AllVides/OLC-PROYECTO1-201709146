terminal String conj, detail, assign, separate, end, open, close,
        unomas, ceromas, conc, cerouno, estot;
terminal String palabra;

non terminal INICIO;
non terminal ABC;
non terminal INP;
non terminal EXP;


start with INICIO;

INICIO::=ABC;

ABC  ::= open ABC
    |  conj    detail  palabra   assign  palabra end ABC
    |  palabra assign  EXP end ABC
    |  separate separate INP

;

INP ::=palabra detail palabra end INP
 |  close
;


EXP ::= cerouno EXP
 |  unomas EXP
 |  ceromas EXP 
 |  conc EXP EXP
 |  estot EXP EXP
 |  palabra
;

